{
  "name": "alchemize",
  "version": "1.0.0",
  "description": "Transform nodes as they are added to the page.",
  "main": "dist/index.js",
  "browser": "browser/alchemize.min.js",
  "repository": "https://github.com/czycha/alchemize",
  "author": "czycha",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix src test ./*.js",
    "clean": "rimraf browser dist",
    "babel": "babel src --out-dir dist",
    "babel:watch": "yarn babel --watch",
    "webpack": "webpack",
    "webpack:watch": "yarn webpack --watch",
    "build": "yarn clean && run-p webpack babel",
    "prepack": "yarn build",
    "serve": "node test/server.js",
    "watch": "run-p babel:watch webpack:watch",
    "test": "jest"
  },
  "dependencies": {
    "matches-selector": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chalk": "^2.4.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "express": "^4.16.3",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "jest-puppeteer": "^3.0.1",
    "npm-run-all": "^4.1.3",
    "puppeteer": "^1.4.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.4",
    "webpack-dev-middleware": "^3.1.3"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "globals": {
      "PATH": "http://localhost:4444"
    },
    "setupFiles": [
      "./test/setup.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  }
}
